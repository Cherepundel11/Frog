#include <iostream>
#include <cmath>

using namespace std;

int main()
{
    setlocale(LC_ALL, "Russian");

    long long x; //х является целым числом
    cout << "ВВедите Х, X>0 X∈Z: ";
    cin >> x;
    long long x1 = -x;
    cout << "Обратное число для х: ";
    cout << x1;
    double x2 = sqrt(x);//представляет вещественное число двойной точности с плавающей точкой в диапазоне +- 1.7E-308 до 1.7E+308.n\
        необходима, потому что число под корнем может быть большим
    double x5 = pow(x, 1.0 / 5); //Использование 1.0 гарантирует, что операция деления будет выполнена как операция с плавающей точкой,n\
        а не как целочисленное деление, которое в данном случае привело бы к результату 0. 
    cout << endl;
    cout << "Степени 2-я: " << x2 << " и 5-я: " << x5 << endl;

    cout << "long long, занимает " << sizeof(x1) * 8 << " бит(а), мин.значение: " << numeric_limits<long long>::lowest() << " макс.значение = " << numeric_limits<long long>::max() << endl;
        //lowest()- указыват мин. значение переменной, max()- указывает макс. значение вида переменной.
    cout << "double, занимает " << sizeof(x2) * 8 << " бит(а), мин.значение: " << numeric_limits<double>::lowest() << " макс.значение = " << numeric_limits<double>::max() << endl;


    return 0;

}
